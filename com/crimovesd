echo "Preparing to move cri to flashdrive/sd card"
MEDIA=/media/removable/cristorage

# Check to see if it's plugged in
if [ -d $MEDIA ]; then
  echo "Found flash drive/sd card"
else
  echo "Couldn't find drive under name 'cristorage' please make sure 
it's plugged in and named as such"
  exit 1
fi

echo "Moving files to card"
sudo mv /mnt/stateful_partition/crouton/chroots/trusty $MEDIA/trusty
echo "DONE...

Linking source files to new destination"

