#!/bin/bash
CGLOBS=~/Downloads/.tmp/globs
source $CGLOBS/globvar
source $CGLOBS/globfun
echo "
Installing bz2..."
cd $CPKG
fixowner
installer "http://www.bzip.org/1.0.6/bzip2-1.0.6.tar.gz" $CPKG/bz2.tar.gz
unpacker "bz2.tar.gz" $CPKG
sudo chown $USER:$USER bzip2-1.0.6
cd "bzip2-1.0.6"
sudo chmod 755 *
sudo make -f Makefile-libbz2_so
sudo make install
cleaner $CBUILD # Clean up files
echo "Done"
